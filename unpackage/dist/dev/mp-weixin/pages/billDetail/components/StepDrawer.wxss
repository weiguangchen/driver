.step-list {
  padding: 24rpx;
}
.step-list .step {
  padding-left: 48rpx;
  margin-bottom: 16rpx;
  position: relative;
}
.step-list .step.active .content .name {
  color: var(--main-color);
  font-weight: bold;
}
.step-list .step.active .box .dot {
  width: 18rpx;
  height: 18rpx;
  background-color: var(--main-color);
}
.step-list .step .content {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: #FFFFFF;
  border-radius: 16rpx;
  padding: 32rpx;
  line-height: 48rpx;
}
.step-list .step .content .name {
  font-size: 28rpx;
  color: var(--content-color);
}
.step-list .step .content .date {
  font-size: 24rpx;
  color: var(--intr-color);
}
.step-list .step .box {
  width: 18rpx;
  position: absolute;
  top: 50%;
  left: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.step-list .step .box .dot {
  width: 10rpx;
  height: 10rpx;
  border-radius: 50%;
  background-color: #C8D4DF;
}
.step-list .step .box .line {
  margin-top: 14rpx;
  height: 92rpx;
  width: 1px;
  background-color: #E3E9EF;
}