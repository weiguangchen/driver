.filter {
  margin-left: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 64rpx;
  height: 64rpx;
  background: #FFFFFF;
  border-radius: 50%;
  border: 1rpx solid rgba(151, 151, 151, 0.2);
}
.filter.active {
  background: #31CE57;
  border: none;
}
.filter-wrapper {
  padding: 0 24rpx;
}
.filter-wrapper .filter-title {
  font-weight: 500;
  font-size: 30rpx;
  color: var(--title-color);
  line-height: 48rpx;
  margin-bottom: 16rpx;
}
.filter-wrapper .date-range {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 24rpx;
  padding: 0 10rpx;
}
.filter-wrapper .date-range .start-date,
.filter-wrapper .date-range .end-date {
  justify-content: space-between;
  width: 300rpx;
  flex: none;
  color: var(--intr-color);
}
.filter-wrapper .date-box,
.filter-wrapper .start-date,
.filter-wrapper .end-date {
  display: flex;
  align-items: center;
  justify-content: center;
  color: var(--intr-color);
  padding: 0 32rpx;
  height: 72rpx;
  background: #FFFFFF;
  border-radius: 36rpx;
  border: 2rpx solid var(--divider);
  font-size: 26rpx;
  line-height: 48rpx;
}
.filter-wrapper .date-box--active,
.filter-wrapper .start-date--active,
.filter-wrapper .end-date--active {
  opacity: 0.45;
}
.filter-wrapper .date-box.active,
.filter-wrapper .start-date.active,
.filter-wrapper .end-date.active {
  background: linear-gradient(270deg, #31CE57 0%, #07B130 100%);
  color: #FFFFFF;
  border: none;
}
.btn-group {
  display: flex;
}
.btn-group .left {
  width: 192rpx;
  margin-right: 20rpx;
}
.btn-group .right {
  flex: 1;
}